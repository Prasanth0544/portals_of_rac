# Backend API URL (Vite uses VITE_ prefix)
VITE_API_URL=http://localhost:5000/api

# WebSocket URL
VITE_WS_URL=ws://localhost:5000

# Application Title
VITE_APP_TITLE=Passenger Portal

# Environment
VITE_ENV=production
